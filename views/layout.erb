<!doctype html>
<html lang="en-US">
  <head>
    <title>Fictional Worlds</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/app.css">
  </head>
  <body>
    <header>
      <h1><a href="/worlds">Fictional Worlds</a></h1>
      <hr>
      <div class="actions">
        <%== yield_content :header_links %>
      </div>
    </header>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>
    </main>
  </body>
</html>